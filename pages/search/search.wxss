.containter{
  background: #fff;
  height: 100%;
}
.header{
  background: #fff;
  padding: 30rpx 30rpx;
  display: flex;
  box-sizing: border-box;
  justify-content: space-between;
  width: 100%;
  border-bottom: 2px solid #f0f0f2;
}
.sousuo{
  display: flex;
  background: #f0f0f2;
  box-sizing: border-box;
  border-radius: 20rpx;
  height: 60rpx;
  font-size: 32rpx;
  align-items: center;
  flex: 3;
}
.sousuo icon{
  margin-left: 20rpx;
}
.header button{
  font-size: 32rpx;
  width: 80rpx;
  margin: 0;
  padding: 0;
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 60rpx;
  flex: 1;
}
.discount{
  text-align: center;
  font-size: 30r0px;
  font-weight: bold;
  margin: 30rpx 0;
}
.discount::after{
  content: '';
  height: 10px;
  width: 100%;
  display: inline-block;
  background: #f0f0f2;
}
.discount .name{
  display: inline-block;
  margin-bottom: 30rpx;
}
.discount .name::after{
  content: '';
  height: 1px;
  width: 100rpx;
  display: inline-block;
  background: #333;
  margin-bottom: 15rpx;
  margin-left: 40rpx;
}
.discount .name::before{
  content: '';
  height: 1px;
  width: 100rpx;
  display: inline-block;
  background: #333;
  margin-bottom: 15rpx;
  margin-right: 40rpx;
}
.discount image{
  width: 100%;
  height: 400rpx;
}
.filter{
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
  border: 1px solid #dcdcdc;
  height: 60rpx;
  line-height: 60rpx;
}
.shoplist{
  padding:30rpx;
  overflow: hidden;
  font-weight: normal;
  display: flex;
  width: 100%;
  box-sizing: border-box;
  display: -webkit-flex; 
  justify-content: space-between;
}
.img_box{
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  margin-right: 15rpx;
  float:left;
}
.img_box image{
  height: 100%;
  width: 100%;
}
.right_box{
  font-size: 30rpx;
  float: right;
  flex-grow: 1;
}
.pingpai{
    display: inline-block;
    width: 30px;
    text-align: center;
    font-weight: bold;
    height: 20px;
    line-height: 20px;
    background-color: #ffd930;
    border-radius: 3px;
    font-size: 12px;
    margin-right: 20rpx;
}
.shopname{
    font-weight: bold;
    font-size: 0.8rem;
    width: 100px;
    overflow: hidden;
    white-space: nowrap;
    display: inline-block;
    text-overflow: ellipsis;
}
.shopTop{
  line-height: 30rpx;
  text-align: left;
  font-weight: normal;
}
.rightspan {
  float: right;
}
.rightspan .letter{
  display: inline-block;
    height: 14px;
    border: 1px solid #A3ACB7;
    margin-left: 3px;
    padding: 1px;
    color: #A3ACB7;
    line-height: 14px;
    font-size: 12px;
    border-radius: 2px;
}
.right_box .xx{
  display: inline-block;
 
}
.right_box .score{
  color: #FE3D3D;
  display: inline-block;
  margin-left: 8rpx;
}
