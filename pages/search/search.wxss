.xxdiv{
  text-align: left;
}
.xxdiv .num{
  display: inline-block;
  margin: 0 10rpx;
}
.rightspan .fn{
  display: inline-block;
  color: #fff;
  font-size: 26rpx;
  margin: 0 10rpx;
}
.rightspan .zs{
  display: inline-block;
    display: inline-block;
    height: 14px;
    border: 1px solid #3190E8 ;
    margin-left: 3px;
    padding: 1px;
    color: #3190E8 ;
    line-height: 14px;
    font-size: 26rpx;
    border-radius: 2px;
}
.shopfoot{
  display: block;
}
.shopfoot .money{
  display: inline-block;
  float: left;
}
.shopfoot .distance{
  display: inline-block;
  float: right;
}
.distance .locat{
  display: inline-block
}
.distance .col{
  display: inline-block
}
